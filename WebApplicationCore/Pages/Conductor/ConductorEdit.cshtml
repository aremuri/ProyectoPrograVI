@page
@model WebApplicationCore.Pages.Conductor.ConductorEditModel
@{
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar":"Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit">


                <input type="hidden" asp-for="Entity.ConductorId" v-model="Entity.ConductorId" />

                <div class="form-group mb-3">
                    <label for="Entity.CedulaConductor" class="form-label">Cedula</label>
                    <input type="text" class="form-control" asp-for="Entity.CedulaConductor" v-model="Entity.CedulaConductor" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.NombreConductor" class="form-label">Nombre Completo</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreConductor" v-model="Entity.NombreConductor" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.TelefonoConductor" class="form-label">Telefono</label>
                    <input type="text" class="form-control" asp-for="Entity.TelefonoConductor" v-model="Entity.TelefonoConductor" maxlength="250" required>
                </div>
                <div class="form-group form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" v-model="Entity.Estado" value="true">
                    <label class="form-check-label" for="Entity_Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-outline-primary">
                            @(Model.id.HasValue ? "Actualizar":"Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script defer src="~/App/Conductor/ConductorEdit.js"></script>
}