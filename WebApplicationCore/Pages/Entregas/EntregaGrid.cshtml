@page
@model WebApplicationCore.Pages.Entregas.EntregaGridModel
@{
}

<div class="container-fluid">
    <div class="card">
     <div class="card-header">

            ENTREGAS


    </div>
    <div class="card-body">

        <a class="btn btn-outline-primary" asp-page="EntregaEdit">
            <i class='bx bxs-comment-add'></i>
        </a>

        <div class="row">

            <div class="col-12"></div>
            <table id="GridView" class="table table-bordered table-striped table-over">
                <thead>
                    <tr>
                        <th>IdEntrega</th>
                        <th>FechaEntrega</th>
                        <th>NumPedido</th>
                        <th>Provincia</th>
                        <th>Canton</th>
                        <th>Distrito</th>
                        <th>Cualidad</th>
                        <th>Nombre Completo</th>
                        <th>Estado</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GridList)
                    {
                    <tr>
                        <td>@item.EntregaId</td>
                        <td>@item.FechaEntrega</td>
                        <td>@item.PedidoId</td>
                        <td>@item.Provincia.NombreCatalogoProvincia</td>
                        <td>@item.Canton.NombreCatalogoCanton</td>
                        <td>@item.Distrito.NombreCatalogoDistrito</td>
                        <td>@item.CamionesEntity.Cualidad</td>
                        <td>@item.ConductoresEntity.NombreConductor</td>
                        <td>@(item.Estado ?"Activo" :"Inactivo")</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-page="EntregaEdit" asp-route-id="@item.EntregaId">
                                <i class='bx bx-edit-alt'></i>
                            </a>
                            <button type="button" class="btn btn-outline-danger"
                                    onclick="EntregaGrid.OnClickEliminar(@item.EntregaId)">
                                <i class='bx bx-trash'></i>
                            </button>
                        </td>
                    </tr>}
                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script defer src="~/App/Entregas/EntregaGrid.js"></script>

}
