@page
@model WebApplicationCore.Pages.Camiones.CamionGridModel
@{
}

<div class="container">
    <div class="card">
        <div class="card-header">

            Camiones


        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="CamionEdit">
                <i class='bx bxs-comment-add'></i>
            </a>

            <div class="row">

                <div class="col-12"></div>
                <table id="GridView" class="table table-bordered table-striped table-over">
                    <thead>
                        <tr>
                            <th>IdCamion</th>
                            <th>Cualidad</th>
                            <th>Estado</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GridList)
                                {
                    <tr>
                        <td>@item.CamionId</td>
                        <td>@item.Cualidad</td>
                        <td>@(item.Estado ?"Activo" :"Inactivo")</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-page="CamionEdit" asp-route-id="@item.CamionId">
                                <i class='bx bx-edit-alt'></i>
                            </a>
                            <button type="button" class="btn btn-outline-danger"
                                    onclick="CamionGrid.OnClickEliminar(@item.CamionId)">
                                <i class='bx bx-trash'></i>
                            </button>
                        </td>
                    </tr>}
                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    
    <script defer src="~/App/Camiones/CamionGrid.js"></script>
}