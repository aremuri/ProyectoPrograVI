@page
@model WebApplicationCore.Pages.CatalogoProductos.CatalogoProductosGridModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            CATALOGO DE PRODUCTOS
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="CatalogoProductosEdit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>CategoriaId</th>
                                <th>NombreCategoria</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.CategoriaId</td>
                                    <td>@item.NombreCategoria</td>
                                    <td>@(item.Estado ? "Activo": "Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="CatalogoProductosEdit" asp-route-id="@item.CategoriaId">
                                            <i class='bx bxs-edit'></i>
                                        </a>

                                        <button type="button" class="btn btn-outline-primary"
                                                onclick="CatalogoProductosGrid.OnClickEliminar(@item.CategoriaId)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                
                             }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts{


    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/CatalogoProductos/CatalogoProductosGrid.js"></script>

}

