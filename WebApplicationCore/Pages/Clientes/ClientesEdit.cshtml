@page
@model WebApplicationCore.Pages.Clientes.ClientesEditModel
@{
}

<div id="AppEdit" class="container">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar" : "Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdCliente" />

                <div class="form-group mb-3">
                    <label for="Entity.Cedula" class="form-label">Cedula</label>
                    <input type="text" class="form-control" asp-for="Entity.Cedula" maxlength="250" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.Nombre" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Apellidos" class="form-label">Apellidos</label>
                    <input type="text" class="form-control" asp-for="Entity.Apellidos" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Direccion" class="form-label">Dirección</label>
                    <input type="text" class="form-control" asp-for="Entity.Direccion" maxlength="500" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                    <input type="date" class="form-control" asp-for="Entity.FechaNacimiento" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Telefono" class="form-label">Telefono</label>
                    <input type="text" class="form-control" asp-for="Entity.Telefono" maxlength="250" required>
                </div>

                <div class="form-group form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="Entity.Estado" value="true">
                    <label class="form-check-label" for="Entity_Estado">Estado</label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-primary">
                            @(Model.id.HasValue?"Actualizar":"Agregar")
                        </button>
                    </div>
                </div>

            </form>


        </div>
    </div>

</div>

@section Scripts{
    <script defer src="~/App/Clientes/ClientesEdit.js"></script>

}